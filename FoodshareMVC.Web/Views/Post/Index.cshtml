@model FoodshareMVC.Application.ViewModels.Post.ListPostForListVm

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Custom styles for the post list */
    .post-container {
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

    .post-details {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .post-date {
        font-size: 14px;
        color: #888;
    }

    .post-text {
        font-size: 16px;
        margin-bottom: 15px;
    }

    .comment-container {
        background-color: #f0f0f0;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 5px;
        font-size: 14px;
    }

    .comment-user {
        font-size: 12px;
        font-weight: bold;
    }

    .comment-text {
        margin-top: 5px;
    }

    /* Custom styles for the search bar */
    .search-bar {
        display: flex;
        margin-bottom: 15px;
    }

    .search-input {
        flex: 1;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px 0 0 5px;
        font-size: 14px;
    }

    .search-button {
        padding: 8px 12px;
        border: none;
        background-color: #4CAF50;
        color: white;
        border-radius: 0 5px 5px 0;
        font-size: 14px;
        cursor: pointer;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" asp-controller="Post" method="post">
    <div class="search-bar">
        <input type="text" asp-for="SearchString" name="searchString" class="search-input" id="searchString" placeholder="Search posts..." />
        <button type="submit" class="search-button">Search</button>
    </div>
    <div class="row">
        @foreach (var post in Model.Posts)
        {
            <div class="post-container">
                <div class="post-date">
                    @Html.DisplayFor(modelItem => post.CreateDateTime)
                </div>
                <div class="post-details">
                    @Html.DisplayFor(modelItem => post.Creator)
                </div>
                <div class="post-text">
                    @Html.DisplayFor(modelItem => post.Text)
                </div>
                @foreach (var comment in post.Comments)
                {
                    <div class="comment-container">
                        <div class="comment-user">@Html.DisplayFor(modelItem => comment.UserName)</div>
                        <div class="comment-text">@Html.DisplayFor(modelItem => comment.Text)</div>
                    </div>
                }
            </div>
        }
    </div>
    <div class="row">
        <table>
            <tr>
                @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                {
                    <td>
                        @if (i != Model.CurrentPage)
                        {
                            <a href="javascript:PagerClick(@i)">@i</a>
                        }
                        else
                        {
                            <span>@i</span>
                        }
                    </td>
                }
            </tr>
        </table>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="10" />
    </div>
</form>
